pipeline {
    agent any
        
        stages{
            
            stage('Build the code') {
                steps {
                    echo "hello im building the code"
                }
            }
            
            stage('Test the code') {
                steps {
                    echo "Hello I'm Testing the code"
                }
            }
            
            stage('Deploy the code') {
                steps {
                    echo "Hello I'm deploying the code"
                }
            }
        }
}
